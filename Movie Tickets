console.log('Person1: Shows Ticket');
console.log('Person2: Shows Ticket');

const promiseWifeBringingTickets = new Promise((resolve) => {
  setTimeout(() => {
    resolve('ticket');
  }, 3000);
});

const getPopcorn = async () => {
  const t = await promiseWifeBringingTickets;
  console.log('Wife: I have Tickets');
  console.log('Husband: We should go in');
  console.log('Wife: No, I am Hungry');
  return `${t} popcorn`;
};

const getButter = async () => {
  const t = await getPopcorn();
  console.log('Husband: I got Popcorn');
  console.log('Husband: We should go in');
  console.log('Wife: I need Butter on My Popcorn');
  return `${t} butter`;
};

const getColdDrinks = async () => {
  const t = await getButter();
  console.log('Husband: I got Butter');
  console.log('Husband: We should go in');
  console.log('Wife: I want Cold Drinks with Popcorn');
  return `${t} cold drinks`;
};

(async () => {
  const result = await getColdDrinks();
  console.log(result);
})();

console.log('Person4: Shows Ticket');
console.log('Person5: Shows Ticket');
